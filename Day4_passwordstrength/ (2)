#App to check the strength of a password.

#To create an empty dictionary
checks =[]



def inputpassword():
#	p=input("Enter your password: ")
	passwordlength = len(p)
	Uppercasecount = len([w for w in p if w.isupper()])
	stringcharacter =len([w for w in p if not w.isalnum()])
	if passwordlength > 5 and Uppercasecount > 2 and stringcharacter > 1:
		print("Strong Password!")
		checks.append( "Strong password")
	elif passwordlength > 5 and Uppercasecount > 1 and stringcharacter > 1:
		print("Input upper case and special characters in your password!")
		checks.append("Input upper case and special characters in your password")
	elif passwordlength > 5 and Uppercasecount > 2 and stringcharacter < 2:
		print("Input special characters in your password!")
		checks.append("Weak password")
	elif passwordlength < 5 and Uppercasecount > 2 and stringcharacter > 2:
		print("Password length too short!")
		checks.append( "Password length too short")
	elif passwordlength < 5 and Uppercasecount < 2 and stringcharacter < 2:
		print("Weak password")
		checks.append("Weak Password")
	
		
	
		



	
#	if password
#	print(passwordlength)
#	print(Uppercasecount)
#	print(stringcharacter)
	

while True:
	
	
	p=input("Enter your password: ")
	inputpassword()
	
#if passwordlength > 5:
#	print("Strong Password")
#else:
#	print("Weak password")
	
	nextcalculation =input("Do you want to try again(yes/no): ")
	print(checks)
	
	if nextcalculation == 'no':
		break




	